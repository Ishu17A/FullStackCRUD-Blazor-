@page "/"
@using System.Text.Json
@using System.Text.Json.Serialization
@inject IHttpClientFactory ClientFactory



<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<h1> Hit the Web API</h1>

<p>
    <a href="/employee/add">Create</a>
</p>

@if (Employees != null)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>BRAND</th>
                <th>TITLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Brand</td>
                    <td>@employee.Title</td>

                    <td>
                        <a href=@($"/user/edit/{@employee.Id}") class="btn btn-outline-dark" role="button">
                            Edit
                        </a>
                        <a href=@($"/user/delete/{@employee.Id}") class="btn btn-outline-danger" role="button">
                            Delete 
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading employee data...</p>
}

